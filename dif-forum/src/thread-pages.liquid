---
pagination:
    data: threads
    size: 1
    alias: thread
permalink: "/{{ thread.forumChannel.name }}/{{ thread.originalPost.title | slugify }}/"
layout: base.liquid
---
{% assign originalPost = thread.originalPost %}
{% assign replyPosts = thread.replyPosts %}
<div class="w-full">
  <div class="breadcrumbs flex h-10 bg-base-300 px-4 text-sm">
    <ul>
      <li><a href="/">Home</a></li>
      <li>
        <a href="/{{thread.forumChannel.name}}">{{ thread.forumChannel.displayName }}</a>
      </li>
      <li>
        <a href="/{{thread.forumChannel.name}}/{{thread.originalPost.title | slugify}}">
          {{- thread.originalPost.title -}}
        </a>
      </li>
    </ul>
  </div>
  <div class="bg-base-200 py-4 md:px-4">
    <ul>
      <li>
        {% render "components/post", post: originalPost, isOriginalPost: true %}
      </li>
      {% for replyPost in replyPosts %}
        <li>
          {% render "components/post", post: replyPost %}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
